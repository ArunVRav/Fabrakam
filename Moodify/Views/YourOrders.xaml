<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Moodify.YourOrders">
	<StackLayout>
		<Label Text="Your Orders" VerticalOptions="Start" HorizontalOptions="Center" />
    <ListView x:Name="ListView">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <Label Text="{Binding foodName}" FontSize="20" TextColor="Blue" Grid.Column="0"/>
              <Label Text="{Binding noOrders}" Grid.Column="1" FontSize="30" TextColor="Olive"/>
              <Label Text="$" FontSize="30" Grid.Column="2"/>
              <Label Text="{Binding Price}" FontSize="30" TextColor="#ffa500" Grid.Column="3"/>
            </Grid>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button Text="Make Order!" Clicked="MakeOrder"/>
	</StackLayout>
</ContentPage>
